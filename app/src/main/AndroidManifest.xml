<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="miroshnychenko.mykola.twitterclient" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TwitterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".activities.MainActivity" >
        </activity>
        <activity android:name=".activities.LoginActivity" >

        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="89f305b1e71e24c93c84b66ce6300f31b004d9fa" />

        <activity android:name=".activities.StartUpActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <receiver
        android:name=".MyResultReceiver"
        android:exported="false">
        <intent-filter>
            <action android:name="com.twitter.sdk.android.tweetcomposer.UPLOAD_SUCCESS"/>
            <action android:name="com.twitter.sdk.android.tweetcomposer.UPLOAD_FAILURE"/>
        </intent-filter>
    </receiver>



</manifest>
